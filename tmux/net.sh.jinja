#!/bin/sh
# WARNING:
# This file is under CM control - all manual changes will be removed
#

IF=$1
if [ -z "$IF" ]
then
    {%- set default_ip = salt['grains.get']('fqdn_ip4', ['127.0.0.1'])|first() %}
    {%- for int, addresses in salt['grains.get']('ip_interfaces', {'lo':'127.0.0.1'}).items() if default_ip in addresses %}
    IF="{{ int }}"
    {%- endfor %}
fi

R1=`cat /sys/class/net/$IF/statistics/rx_bytes`
T1=`cat /sys/class/net/$IF/statistics/tx_bytes`
sleep 1
R2=`cat /sys/class/net/$IF/statistics/rx_bytes`
T2=`cat /sys/class/net/$IF/statistics/tx_bytes`

R=$(( $R2 - $R1 ))
T=$(( $T2 - $T1 ))
MODR="B"
MODT="B"

if [ $R -gt 1024 ]
then
    MODR="K"
    R=$(( $R / 1024 ))

    if [ $R -gt 1024 ]
    then
        MODR="M"
        R=$(( $R / 1024 ))
    fi
fi

if [ $T -gt 1024 ]
then
    MODT="K"
    T=$(( $T / 1024 ))

    if [ $T -gt 1024 ]
    then
        MODT="M"
        T=$(( $T / 1024 ))
    fi
fi

printf "%s:%4d%s↓%4d%s↑" $IF $R $MODR $T $MODT
